#!/usr/bin/env ruby
 
classes = ARGV.map{|f| File.basename(f).split('.')[0]}
cmd = "("
cmd += "mvn -B -f ./aura-integration-test/pom.xml clean post-integration-test -DskipUnitTests -DrunIntTests -Dwebdriver.browser.type=GOOGLECHROME -Djava.io.tmpdir=./tmp  -Dwebdriver.reusebrowser=true -DskipJsDoc -Dscreenshots.directory=./screenshots  -DtestThreadCount=2 -DtestsToRun=#{classes.join(',')}"
#cmd += "mvn #{ARGV.join('')} -DtestsToRun=#{classes.join(',')}"
cmd += ")"
 
puts cmd
 
system(cmd)
